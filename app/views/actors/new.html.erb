<%= page_title(t('.title')) %>

<%= form_with(model: @actor) do |f| %>
  <div class="mb-6">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-field' %>
  </div>
  <div class="mb-6">
    <%= f.label :birth_date, class: 'form-label' %>
    <%= f.date_select :birth_date, class: 'form-field' %>
  </div>
  <div class="mb-6">
    <%= f.label :nacionality, class: 'form-label' %>
    <%= f.text_field :nacionality, class: 'form-field' %>
  </div>
  <div>
    <%= f.submit 'Criar Cinema', class: 'btn-confirm' %>
  </div>
<% end %>
